<div>
    <h1><%= @course.title %> - <%= @course.cnum %>, <%= @course.term %> </h1>
    <hr />

<h2>List of Active Threads</h2>
<table>
    <tr>
        <th>Title</th>
        <th>Posted on</th>
    </tr>
    <% @cthreads.each do |cthread| %>
        <tr>
            <td><%= link_to cthread.title, course_cthread_path(@course, cthread) %></td>
            <td><%= cthread.posted_on %></td>
            <% if can? :edit, Cthread %>            
                <td><%= link_to 'Edit', edit_course_cthread_path(@course, cthread) %></td>
            <% end %>
            <% if can? :destroy, Cthread %>
                <td><%= link_to 'Delete', course_cthread_path(@course, cthread), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
        </tr>
    <% end %>
</table>
</div>

<!--<%= link_to 'View threads', course_cthreads_path(@course.id) %>-->
<br />
<% if can? :create, Cthread %>
    <%= link_to 'Create new thread', new_course_cthread_path(@course.id) %>
<% end %>
