<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">List of Subjects</h4>
      </div>
      <div class="modal-body">
        <div id="courses-table">
            <table class="table">
                <tr>
                    <th>Cnum</th>
                    <th>Title</th>
                    <th>Term</th>
                    <th>Start Date</th>
                    <th></th>
                    <th></th>
                </tr>
                <% @courses.each do |course| %>
                    <tr>
                        <td ><%= course.cnum %></td>
                        <td><%= link_to course.title, course_path(course) %></td>
                        <td><%= course.term %></td>
                        <td><%= course.start_date %></td>
                        <td><%= link_to 'Edit', edit_course_path(course) , :class => "btn btn-primary dropdown-toggle" %></td>
                        <td><%= link_to 'Delete', course_path(course), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary dropdown-toggle"%></td>
                        <!--<td style="color: black;"><button type="button" class="btn btn-danger dropdown-toggle"><%= link_to 'Delete', course_path(course), method: :delete, data: { confirm: 'Are you sure?' } %></button></td>-->
                        <!--<td><%= link_to 'Edit', edit_course_path(course) %></td>-->
                        <!--<td><%= link_to 'Delete', course_path(course), method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
                        
                    </tr>
                <% end %>
            </table>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
