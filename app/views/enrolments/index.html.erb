<p id="notice"><%= notice %></p>

<h1>Listing Enrolments</h1>

<table>
  <thead>
    <tr>
      <th>Course name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enrolments.each do |enrolment| %>
      <tr>
        <td><%= enrolment.course.title %></td>
        <td><%= enrolment.user.name %></td>
        <!--<td>%= link_to 'Show', course_enrolments_path %></td>-->
        <!--<td>%= link_to 'Edit', edit_course_enrolment_path(enrolment) %></td>-->
        <td><%= link_to 'Destroy', [@course,enrolment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

