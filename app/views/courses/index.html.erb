<h1>Courses</h1>

<div id="courses-table">
    <table>
        <tr>
            <th>Cnum</th>
            <th>Title</th>
            <th>Term</th>
            <th>Start Date</th>
        </tr>
        <% @courses.each do |course| %>
            <tr>
                <td><%= course.cnum %></td>
                <td><%= link_to course.title, course_path(course) %></td>
                <td><%= course.term %></td>
                <td><%= course.start_date %></td>
                <% if can? :edit, course %>
                    <td><%= link_to 'Edit', edit_course_path(course) %></td>
                <% end %>
                <% if can? :delete, course %>
                    <td><%= link_to 'Delete', course_path(course), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <% end %>
                <% if can? :create, Enrolment %>
                    <td><%= link_to 'Manage Enrolments', course_enrolments_url(course) %></td>
                <% end %>
            
            </tr>
        <% end %>
    </table>
</div>

<br />
<% if current_user.user_type == 'instructor' %>
    <%= link_to 'Create New Course', new_course_path %>
<% end %>
