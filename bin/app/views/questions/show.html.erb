<div>
    <h1><%= @course.title %>, <%= @cthread.title %></h1>
    <hr />
    
    <h2><%= @question.heading %></h2>
    <p><%= @question.statement %></p>
    <% if !@isinstructor %>
        <p><i> Posted by: <%= @question.posted_by %></i></p>
    <% else %>
        <p><i> Posted by: <%= @question.user.name %></i></p>
    <% end %>    
    <h3>Answers</h3>
    <% if @responses.nil? %>
        <p><%= print "no data found" %></p>
    <% else %>
        <% @responses.each do |response| %>
            <p> <%= response.answer %></p>
            <% if !@isinstructor %>
                <p><i> - <%= response.posted_by %></i></p>
            <% else %>
                <p><i> - <%= @user_names[response.user_id] %></i></p>
            <% end %>
        <% end %>
    <% end %>
</div>

<br />
<%= link_to 'New Answer', new_course_cthread_question_response_path(@course, @cthread, @question) %>
<br />
<%= link_to 'Back', course_cthread_path(@course, @cthread) %>